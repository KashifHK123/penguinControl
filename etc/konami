De niet-obfuscated versie van de Konami code in app/views/layout/master.blade.php;

$(document).ready
(
	function ()
	{
		@if (! empty ($konami))
			$('#clippy').addClass ('persistent');
		@endif

		var konami = new Konami
		(
			function ()
			{
				$('#clippy').addClass ('konami');

				$('#clippy').click
				(
					function ()
					{
						$('body').addClass ('konami');
					}
				);
			}
		);
	}
); 
